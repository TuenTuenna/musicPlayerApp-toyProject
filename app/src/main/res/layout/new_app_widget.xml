        <!--android:layout_marginEnd="48dp"-->
        <!--android:layout_marginRight="48dp"-->
        <!--app:lottie_autoPlay="true"-->
        <!--app:lottie_fileName="music.json"-->
        <!--android:backgroundTint="#fff"-->
        <!--app:lottie_loop="true"-->
        <!--/>-->

    <ImageButton
        android:id="@+id/appwidget_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/appwidget_album_art"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="11dp"
        android:layout_toRightOf="@id/appwidget_play"
        android:background="@drawable/ic_next_song"
        android:backgroundTint="#fff"
        />

    <ImageButton
        android:id="@+id/appwidget_isLoop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/appwidget_album_art"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/appwidget_next"
        android:background="#00ffffff"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/appwidget_music_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/ic_soundcloud_logo"
         />



</RelativeLayout>