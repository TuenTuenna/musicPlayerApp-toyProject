<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    tools:context=".Etc.CaptureImageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ce411a"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:text="수정할 자료"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_edit_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <Button
            android:id="@+id/btn_profile_pic_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/user_edit_profile_pic"
            android:layout_toRightOf="@id/user_edit_profile_pic"
            android:background="@drawable/ic_photo_option"
            android:gravity="bottom" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_json_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/edit_json_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD CHECK"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btn_profile_edit_finish"
        android:text="프로필 수정"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#84acd1"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:text="불러온 자료"/>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/user_edit_profile_pic_check"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/load_json_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="ID"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/json_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="PASSWORD"
        android:padding="5dp"/>

    <Button
        android:id="@+id/btn_profile_edit_check"
        android:text="프로필 확인"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>